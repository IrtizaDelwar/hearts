<%= render 'layouts/hearts_navbar' %>

<div class="col-md-12">
<table class="table table-striped table-dark table-bordered table-sm">
	<thead>
		<tr>
            <th>Rank</th>
			<th>Name</th>
			<th>ELO</th>
			<th>Games</th>
			<th>Win Rate</th>
		</tr>
	</thead>

	<tbody>
		<% @player.each_with_index do |player, index| %>
			<tr>
                <td><%= index + 1 %></td>
				<td><%= link_to player.name, "/players/" + player.name %></td>
                <td><%= player.elov2.to_i %></td>
				<td><%= player.wins + player.losses%></td>
				<td><%= number_to_percentage(player.wins / (player.wins + player.losses).to_f * 100.0, precision: 0) %></td>
			</tr>
		<% end %>
        <% @unranked_player.each do |player| %>
            <tr>
                <td>-</td>
                <td><%= link_to player.name, "/players/" + player.name %></td>
                <td><%= player.elov2.to_i %></td>
                <td><%= player.wins + player.losses%></td>
                <td><%= number_to_percentage(player.wins / (player.wins + player.losses).to_f * 100.0, precision: 0) %></td>
            </tr>
        <% end %>
	</tbody>
</table>
</div>
