<%= render 'layouts/poker_navbar' %>

<div class="col-md-12">
	<div class="panel panel-default">
<div class="panel-heading panel-heading-custom"><center>Season 1 Tournament</center></div>
<table class="table table-striped table-dark table-bordered table-sm">
	<thead>
		<tr>
            <th>Placement</th>
			<th>Name</th>
			<th>Season ELO</th>
			<th>Season Ranking </th>
		</tr>
	</thead>

	<tbody>
		<% @results.each_with_index do |player, index| %>
			<tr>
                <td><%= index + 1 %></td>
                <% if index == 0 %>
     				<td><%= link_to player[0], "/poker_players/" + player[0] %> 🏆	</td>
   				<% else %>
     				<td><%= link_to player[0], "/poker_players/" + player[0] %></td>
  				<% end %>
                <td><%= player[1]["elo"] %></td>
				<td><%= player[1]["rank"] %></td>
			</tr>
		<% end %>
	</tbody>
</table>
<br>
